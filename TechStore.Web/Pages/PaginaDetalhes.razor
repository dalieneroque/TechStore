@page "/produto/{id:int}"
@inject HttpClient Http
@inject NavigationManager Navigation

<PageTitle>TechStore - Detalhes</PageTitle>

<!-- CABEÇALHO -->
<section class="bg-dark text-white p-4 rounded shadow mb-4">
    <div class="container text-center">
        <h1 class="fw-bold">Detalhes do Produto</h1>
    </div>
</section>

<div class="container">

    <!-- Botão voltar -->
    <button @onclick="Voltar" class="btn btn-outline-secondary mb-4">
        <i class="bi bi-arrow-left"></i> Voltar para Produtos
    </button>

    @if (carregando)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;"></div>
            <p class="mt-3 fs-5">Carregando produto...</p>
        </div>
    }
    else if (produto == null)
    {
        <div class="alert alert-warning shadow">
            <h4>Produto não encontrado</h4>
            <p>O produto que você está procurando não existe.</p>
            <button @onclick="Voltar" class="btn btn-primary">Voltar</button>
        </div>
    }
    else
    {
        <div class="row g-4">

            <!-- IMAGEM -->
            <div class="col-md-5">
                <div class="card shadow border-0">
                    <img src="https://via.placeholder.com/600x450"
                         class="img-fluid rounded">
                </div>
            </div>

            <!-- INFORMAÇÕES -->
            <div class="col-md-7">
                <div class="card shadow border-0 h-100">
                    <div class="card-body d-flex flex-column">

                        <h2 class="fw-bold">@produto.nome</h2>

                        <span class="h2 text-success fw-bold mb-3">
                            R$ @produto.preco.ToString("N2")
                        </span>

                        <span class="badge @(produto.quantidadeEstoque > 0 ? "bg-success" : "bg-danger") fs-6 mb-3">
                            @(produto.quantidadeEstoque > 0 ? "Disponível em estoque" : "Esgotado")
                        </span>

                        <!-- Descrição -->
                        <div class="mb-4">
                            <h5>Descrição</h5>
                            <p class="text-muted">@produto.descricao</p>
                        </div>

                        <!-- Estoque -->
                        <div class="mb-4">
                            @if (produto.quantidadeEstoque > 0)
                            {
                                <p class="text-success fw-bold">
                                    <i class="bi bi-check-circle-fill"></i>
                                    @produto.quantidadeEstoque unidades disponíveis
                                </p>
                            }
                            else
                            {
                                <p class="text-danger fw-bold">
                                    <i class="bi bi-x-circle-fill"></i>
                                    Produto esgotado
                                </p>
                            }
                        </div>

                        <!-- BOTÃO -->
                        <div class="mt-auto">
                            @if (produto.quantidadeEstoque > 0)
                            {
                                <button class="btn btn-primary btn-lg w-100"
                                        @onclick="AdicionarAoCarrinho">
                                    <i class="bi bi-cart-plus"></i> Adicionar ao Carrinho
                                </button>
                            }
                            else
                            {
                                <button class="btn btn-secondary btn-lg w-100" disabled>
                                    Indisponível
                                </button>
                            }
                        </div>

                    </div>
                </div>
            </div>

        </div>

        <!-- INFORMAÇÕES ADICIONAIS -->
        <div class="card shadow border-0 mt-4">
            <div class="card-body">
                <h5 class="mb-3">Informações Técnicas</h5>

                <ul class="list-group list-group-flush">
                    <li class="list-group-item d-flex justify-content-between">
                        <span>ID do Produto:</span>
                        <strong>#@produto.id</strong>
                    </li>

                    <li class="list-group-item d-flex justify-content-between">
                        <span>Status:</span>
                        @if (produto.quantidadeEstoque > 0)
                        {
                            <span class="text-success">Disponível</span>
                        }
                        else
                        {
                            <span class="text-danger">Indisponível</span>
                        }
                    </li>
                </ul>
            </div>
        </div>
    }
</div>

<style>
    .card:hover {
        transform: scale(1.01);
        transition: 0.2s ease-in-out;
    }
</style>

@code {
    [Parameter] public int Id { get; set; }

    private class Produto
    {
        public int id { get; set; }
        public string? nome { get; set; }
        public string? descricao { get; set; }
        public decimal preco { get; set; }
        public int quantidadeEstoque { get; set; }
    }

    private Produto? produto;
    private bool carregando = true;

    protected override async Task OnInitializedAsync()
    {
        await CarregarProduto();
    }

    private async Task CarregarProduto()
    {
        try
        {
            produto = await Http.GetFromJsonAsync<Produto>($"api/produtos/{Id}");
        }
        catch
        {
            // Produto não encontrado
        }
        finally
        {
            carregando = false;
        }
    }

    private void Voltar()
    {
        Navigation.NavigateTo("/produtos");
    }

    private void AdicionarAoCarrinho()
    {
        Console.WriteLine($"Adicionar produto {Id} ao carrinho");
    }
}
