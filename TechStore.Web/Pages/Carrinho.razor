@page "/carrinho"
@using TechStore.Web.Services
@inject CarrinhoService carrinho
@inject NavigationManager Navigation
@inject AuthService Auth
@inject PedidoService PedidoService



<section class="bg-dark text-white p-4 rounded shadow mb-4">
    <div class="container text-center">
        <h1 class="fw-bold">Meu Carrinho</h1>
        <p class="lead mb-0">Confira os melhores produtos de tecnologia</p>
    </div>
</section>


<div class="cart-container">
    @if (!carrinho.Itens.Any())
    {
        <div class="alert alert-info text-center">
            <h5 class="mb-2">Seu carrinho está vazio</h5>

            <p class="mb-3">
                Que tal conferir nossos produtos?
            </p>

            <button class="btn btn-primary"
                    @onclick="@(() => Navigation.NavigateTo("/produtos"))">
                Ver produtos
            </button>
        </div>
    }
    else
    {
        <table class="table align-middle">
            <thead>
                <tr>
                    <th>Produto</th>
                    <th>Quantidade</th>
                    <th>Preço</th>                   
                </tr>
            </thead>
            <tbody>
                @foreach (var item in carrinho.Itens)
                {
                    <tr>
                        <td>@item.ProdutoNome</td>
                        <td>@item.Quantidade</td>
                        <td>R$ @item.PrecoUnitario.ToString("N2")</td>
                        <td>
                            <button class="btn btn-sm btn-danger"
                                    @onclick="() => carrinho.RemoverItemAsync(item.ProdutoId)">
                                ❌
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="mt-4 p-4" border rounded shadow-sm">
            <h5 class="mb-3">Finalizar Pedido</h5>

            <div class="mb-3">
                <label class="form-label">Endereço de entrega</label>
                <textarea class="form-control"
                          rows="3"
                          placeholder="Informe o endereço completo"
                          @bind="enderecoEntrega">
                    </textarea>
            </div>

            <div class="mb-3">
                <label class="form-label">Observações (opcional)</label>
                <textarea class="form-control"
                          rows="2"
                          placeholder="Ex: horário de entrega, referência..."
                          @bind="observacoes">
                    </textarea>
            </div>

            @if (!string.IsNullOrEmpty(erro))
            {
                <div class="alert alert-danger">
                    @erro
                </div>
            }

            <div class="d-flex justify-content-between align-items-center mt-4">
                <h5 class="mb-0">
                    Total: <strong>R$ @carrinho.ValorTotal.ToString("N2")</strong>
                </h5>

                <button class="btn btn-success btn-lg"
                        @onclick="FinalizarPedido">
                    Finalizar Pedido
                </button>
            </div>
        </div>
    }
</div>





@code {
    private string enderecoEntrega = string.Empty;
    private string observacoes = string.Empty;
    private string? erro;

    protected override async Task OnInitializedAsync()
    {
        await carrinho.LoadCarrinhoAsync();
    }

    private async Task FinalizarPedido()
    {
        erro = null;

        if (!Auth.IsAuthenticated)
        {
            Navigation.NavigateTo("/login");
            return;
        }

        if (string.IsNullOrWhiteSpace(enderecoEntrega))
        {
            erro = "Informe o endereço de entrega.";
            return;
        }

        var pedido = await PedidoService.CriarPedidoAsync(new TechStore.Application.DTOs.CriarPedidoDTO
        {
            EnderecoEntrega = enderecoEntrega,
            Observacoes = observacoes
        });

        if (pedido == null)
        {
            erro = "Erro ao finalizar o pedido. Tente novamente.";
            return;
        }

        await PedidoService.CriarPedidoAsync(new TechStore.Application.DTOs.CriarPedidoDTO
        {
            EnderecoEntrega = enderecoEntrega,
            Observacoes = observacoes
        });
        await carrinho.LimparCarrinhoAsync();
        Navigation.NavigateTo("/pedido-sucesso");
    }
}
}

